<Window x:Class="DesignBoticUI.Views.ColorPickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DesignBoticUI.Views"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="ColorPickWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Choose Color:" FontSize="14"/>
            <syncfusion:ColorPicker Name="colorPicker" Height="100" Width="280"/>
        </StackPanel>
    </Grid>
</Window>
